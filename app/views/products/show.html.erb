<section class="products-show">

  <% if flash[:notice] %>
    <div class="alert alert-info">
      <strong><%= flash[:notice] %></strong>
    </div>
  <% end %>

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">
    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">

          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
  </article>

  <article class="product-detail">
    <div class="row">
      <div class="col-sm-12 text-center">
        <% rateSym = "\u{1F334}" %>
        <h2>Reviews</h2>
        <dl>
          <% @reviews.each do |review| %>
            <%= render 'review', rateSym: rateSym, review: review %>
          <% end %>
        </dl>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-12 text-center">
        <% if current_user != nil %>
          <%= render 'reviewform', rateSym: rateSym, product: @product%>
        <% end %>
      </div>
    </div>
  </article>

</section>
